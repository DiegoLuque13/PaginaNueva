@model PaginaNueva.Models.Persona
@{
    Layout = "";
}
@{
    ViewBag.Title = "Delete";
}

<div class="modal-dialog">
    <!-- Modal content-->
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <center><h2 class="modal-title">Eliminar</h2></center>
        </div>
        <div class="modal-body body-eliminar-confirm">
            <dt>
                @Html.DisplayNameFor(model => model.Nombre)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Nombre)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Appaterno)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Appaterno)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Apmaterno)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Apmaterno)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Nacionalidad)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Nacionalidad)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Foto)
            </dt>

            <dd>
                <img src="../content/img/personas/@Html.DisplayFor(model => model.Foto)" alt="Smiley face" height="42" width="42">
            </dd>

            </dl>


        </div>
        <div class="dalete-persona">
            <center>
                <h3>Usuario eliminado</h3>
                <img src="../content/img/media/danger.jfif" alt="Smiley face" height="42" width="42">
            </center>
        </div>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="modal-footer">
                <div class="form-actions">
                    <input type="button" value="Eliminar" class="btn btn-danger btn-eliminar-confirm" data-id="@Model.PersonaId" />
                    <button type="button" class="btn btn-info" id="close-details" data-dismiss="modal">Cerrar</button>
                </div>

            </div>

        }

    </div>
    

</div>
@Scripts.Render("~/Scripts/custom.js")